@page "/product"

<h3>Products</h3>

<div class="create-form">
    <form>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Product Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="staticEmail" placeholder="Product Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="inputPassword" placeholder="Price">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
        <button type="button" class="btn btn-primary">Add Product</button>
    </form>
</div>



@if (listProduct == null)
{
<p><em>Loading...</em></p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in listProduct)
            {
        <tr>
            <td>@product.id</td>
            <td>@product.name</td>
            <td>@product.price</td>
            <td>@product.productCategoryName</td>
            <th>
                <a style="cursor:pointer; color:blue">Edit</a> |
                <a style="cursor:pointer; color:blue">Delete</a>
            </th>
        </tr>
            }
    </tbody>
</table>
}


